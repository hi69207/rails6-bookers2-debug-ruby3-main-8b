<p id="notice">
  <%= flash[:notice] %>
</p>

<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @books.user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@books.user) do %>
            <%= image_tag @books.user.get_profile_image, size:"50x50" %><br>
            <%= @books.user.name %>
            <% end %>
          </td>
          <td><%= link_to @books.title, @books %></td>
          <td><%= @books.body %></td>
          <td id="favorite_buttons_<%= @books.id %>">
            <%= render "favorites/favorite", book: @books %>
          </td>
          <td>
            コメント数: <%= render "book_comments/counter", book: @books %>
          </td>
          <% if @books.user == current_user %>
          <td><%= link_to 'Edit', edit_book_path(@books), class: "btn btn-sm btn-success" %></td>
          <td><%= link_to 'Destroy', @books, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
          <% end %>
        </tr>
      </table>
      
      <div id="comment_index">
        <%= render "book_comments/index", book: @books %>
      </div>
      <div id="comment-form">
        <%= render "book_comments/form", book: @books, book_comment: @book_comment %>
      </div>
    </div>
  </div>
</div>