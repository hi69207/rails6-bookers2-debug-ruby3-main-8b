<div class='container'>
  <% @entries.each do |e| %>
    <% if @myUserId != e.user.id %>
      <h2><%= e.user.name %>さんとのチャット</h2>
    <% end %>
  <% end %>
  <div class='row'>
    <div class='col-md-8 offset-md-4'>
      <% if @messages.present? %>
        <% @messages.each do |m| %>
        <% @myUserId == m.user.id  %>
        <p><%= m.message %></p>
        <% end %>
      <% end %>
    </div>
    <div class='col-md-12'>
      <%= form_for @message do |f| %>
        <%= f.text_field :message, placeholder: "メッセージを入力して下さい" , size: 50, class:"form-text-field" %>
        <%= f.hidden_field :room_id, value: @room.id %>
      <% end %>
    </div>
  </div>
</div>





   
